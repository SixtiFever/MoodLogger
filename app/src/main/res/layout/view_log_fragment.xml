<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:paddingStart="15dp">

    <LinearLayout
        android:id="@+id/viewLog_linearLayout_title_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp"
        android:paddingTop="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewLog_innerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/viewLog_title_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="The title of the log"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/circular"
                android:textColor="@color/onyx"
                android:textSize="22sp"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/viewLog_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2023"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.928"
                app:layout_constraintStart_toEndOf="@+id/viewLog_title_textView"
                android:fontFamily="@font/circular"
                android:textColor="@color/onyx"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/viewLog_body_textView"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_marginTop="25dp"
        android:text="The body of the log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/circular"
        android:textColor="@color/onyx"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/viewLog_linearLayout_title_date"
        android:paddingStart="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>